{% extends 'base.html.twig' %}

{% block title %}Categorie{% endblock %}

{% block body %}
    <h1>Categorie</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Nom</th>
                <td>{{ categorie.nom }}</td>
            </tr>
            <tr>

                <th>Cadeaux de cette catégorie : </th>
                <td>
                {% set prix_total = 0 %}
                {% set prix_moyen = 0 %}
                {% set cpt = 0 %}
                    {% for c in categorie.cadeaus %}
                        | {{ c.designation }} {{ c.prix }} € |
                    {% set prix_total = prix_total + c.prix %}
                    {% set cpt = cpt + 1 %}
                {% endfor %} 
                {% set prix_moyen = prix_total / cpt %}
                </td>

                <tr>
                    <th>Prix total de la catégorie</th>
                    <td>{{ prix_total }} €</td>
                </tr>
                <tr>
                    <th>Prix moyen de la catégorie</th>
                    <td>{{ prix_moyen }} €</td>
                </tr>
            </tr>
        </tbody>
    </table>


    <a href="{{ path('categorie_index') }}">back to list</a>

    <a href="{{ path('categorie_edit', {'id': categorie.id}) }}">edit</a>

    {{ include('categorie/_delete_form.html.twig') }}
{% endblock %}
