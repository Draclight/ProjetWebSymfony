{% extends 'base.html.twig' %}

{% block title %}Liste{% endblock %}

{% block body %}
    <h1>Liste</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Cadeau</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
        {% for cado in liste.cadeau %}
            <tr>
                <td>{{ cado.designation }}</td>
                <td>
                    <a href="{{ path('remove_cadeau', {'liste': liste.id, 'cadeau': cado.id}) }}">supprimer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}           
        </tbody>
    </table>

    <a href="{{ path('liste_index') }}">back to list</a>

    {{ include('liste/_delete_form.html.twig') }}
{% endblock %}
